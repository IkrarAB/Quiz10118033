<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:layout_marginHorizontal="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/layoutlogo"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_gravity="center_horizontal"
                android:background="#E6F6EC">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/logo1"
                    android:layout_marginTop="23dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginBottom="24dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="62dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@id/logo"
                    android:layout_toEndOf="@id/logo">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DigiTeam"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Digital Together Everyone Achieve More"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jabar Digital Service"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/profillayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutlogo"
                android:layout_marginTop="24dp">

                <ImageView
                    android:id="@+id/pp"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/pp"/>

                <TextView
                    android:id="@+id/nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dias Eka Fredianto, S.Kom, B.IT"
                    android:layout_toRightOf="@id/pp"
                    android:layout_toEndOf="@id/pp"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nama"
                    android:text="UI Designer"
                    android:layout_toRightOf="@id/pp"
                    android:layout_toEndOf="@id/pp"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profillayout"
                android:orientation="vertical"
                android:layout_marginTop="28dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jam Kerja Bulan Ini"
                    android:layout_marginLeft="16dp"
                    android:textSize="20sp"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:textSize="14sp"
                    android:text="Jam Kerja Kamu Bulan Ini: 130.53 Jam"
                    android:textColor="#0D47A1"/>

            </LinearLayout>
            
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>